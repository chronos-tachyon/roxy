{
  "global": {
    "mimeFile": "/etc/opt/roxy/mime.json",
    "storage": {
      "engine": "fs",
      "path": "/var/opt/roxy/lib/acme"
    }
  },
  "hosts": [
    "*.example.com"
  ],
  "targets": {
    "srv-www": {
      "type": "fs",
      "path": "/srv/www"
    }
  },
  "rules": [
    {
      "target": "srv-www"
    }
  ]
}
